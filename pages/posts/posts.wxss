swiper {
    width: 100%;
    height: 500rpx;
}

swiper image {
    width: 100%;
    height: 500rpx;
}

.post-container {
    display: flex;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    flex-direction: column;
    padding-bottom: 10rpx;
    background-color: #fff;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
}
.post-author-date{
    margin: 10rpx 0 20rpx 10rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.post-author{
    width:60rpx;
    height:60rpx;
    /* vertical-align: middle; */
}
.post-date{
    margin-left: 30rpx;
    font-size: 26rpx;
    /* vertical-align: middle; */
}
.post-title{
    font-size: 36rpx;
    color: #333;
    margin-left: 10px;
    margin-bottom: 10px;
    font-weight: 600;
}
.post-image{
    width:100%;
    height:260rpx;
    margin-bottom: 10rpx;
}
.post-content{
    font-size: 28rpx;
    color:#666;
    margin-bottom: 10rpx;
    margin-top: 10rpx;
    letter-spacing: 2rpx;
}
.post-like{
    display: flex;
    flex-direction: row;
    align-items: center;

}

.post-like-image{
    width:40rpx;
    height:40rpx;
    margin-left:20rpx;
}
.post-like-font{
    margin-left: 5rpx;
}